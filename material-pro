  <script>
    // ==========================================
    // CONTRASEÃ‘A MAESTRA ÃšNICA
    // Todos los usuarios usan esta contraseÃ±a para acceder
    // ==========================================
    const CONTRASEÃ‘A_MAESTRA = "EscuelaPro_2026";
    // ==========================================

    // ConfiguraciÃ³n por defecto
    const defaultConfig = {
      main_title: "Material Pro",
      author_name: "Maestra MarÃ­a Fernanda Flores Valenzuela"
    };

    // Estado de la aplicaciÃ³n
    let termsAccepted = false;
    let currentUser = null;

    // Referencias a elementos
    const loginScreen = document.getElementById('login-screen');
    const termsScreen = document.getElementById('terms-screen');
    const mainScreen = document.getElementById('main-screen');
    const loginForm = document.getElementById('login-form');
    const errorMessage = document.getElementById('error-message');

    // FunciÃ³n para verificar contraseÃ±a
    function verificarContraseÃ±a(password) {
      return password === CONTRASEÃ‘A_MAESTRA;
    }

    // Mostrar pantalla especÃ­fica
    function mostrarPantalla(pantalla) {
      loginScreen.classList.add('hidden');
      termsScreen.classList.add('hidden');
      mainScreen.classList.add('hidden');
      
      if (pantalla === 'login') loginScreen.classList.remove('hidden');
      if (pantalla === 'terms') termsScreen.classList.remove('hidden');
      if (pantalla === 'main') mainScreen.classList.remove('hidden');
    }

    // Manejar login
    loginForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const password = document.getElementById('password').value;
      
      if (verificarContraseÃ±a(password)) {
        errorMessage.classList.add('hidden');
        
        if (!termsAccepted) {
          mostrarPantalla('terms');
        } else {
          mostrarPantalla('main');
        }
      } else {
        errorMessage.classList.remove('hidden');
        document.getElementById('password').value = '';
      }
    });

    // Botones de navegaciÃ³n
    document.getElementById('show-terms-btn').addEventListener('click', function(e) {
      e.preventDefault();
      mostrarPantalla('terms');
    });

    document.getElementById('back-to-login-btn').addEventListener('click', function() {
      mostrarPantalla('login');
    });

    document.getElementById('accept-terms-btn').addEventListener('click', function() {
      termsAccepted = true;
      if (currentUser) {
        mostrarPantalla('main');
      } else {
        mostrarPantalla('login');
      }
    });

   document.getElementById('logout-btn').addEventListener('click', function() {
  currentUser = null;
  document.getElementById('password').value = '';
  mostrarPantalla('login');
});

    document.getElementById('view-terms-btn').addEventListener('click', function() {
      mostrarPantalla('terms');
    });

    // Botones del menÃº (preparados para agregar juegos despuÃ©s)
    document.querySelectorAll('.menu-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        // AquÃ­ puedes agregar la navegaciÃ³n a cada secciÃ³n de juegos
        const seccion = this.querySelector('.font-fredoka').textContent;
        
        // Mostrar mensaje temporal
        const originalContent = this.innerHTML;
        this.innerHTML = `
          <div class="flex flex-col items-center gap-2">
            <span class="text-4xl">ğŸš§</span>
            <span class="text-lg font-fredoka">Â¡PrÃ³ximamente!</span>
            <span class="text-sm">Juegos de ${seccion}</span>
          </div>
        `;
        
        setTimeout(() => {
          this.innerHTML = originalContent;
        }, 2000);
      });
    });

    // FunciÃ³n para actualizar la UI con la configuraciÃ³n
    async function onConfigChange(config) {
      const title = config.main_title || defaultConfig.main_title;
      const author = config.author_name || defaultConfig.author_name;
      
      // Actualizar tÃ­tulos
      document.getElementById('login-title').textContent = title;
      document.getElementById('main-title').textContent = title;
      
      // Actualizar crÃ©ditos
      const creditText = `Material elaborado con â¤ï¸ por<br><span class="font-bold text-purple-600">${author}</span>`;
      document.getElementById('author-credit-login').innerHTML = creditText;
      document.getElementById('author-credit-main').innerHTML = `${creditText.replace('text-purple-600', 'text-purple-600 text-base')}<br>`;
    }

    // InicializaciÃ³n del SDK
    if (window.elementSdk) {
      window.elementSdk.init({
        defaultConfig,
        onConfigChange,
        mapToCapabilities: (config) => ({
          recolorables: [],
          borderables: [],
          fontEditable: undefined,
          fontSizeable: undefined
        }),
        mapToEditPanelValues: (config) => new Map([
          ["main_title", config.main_title || defaultConfig.main_title],
          ["author_name", config.author_name || defaultConfig.author_name]
        ])
      });
    } else {
      onConfigChange(defaultConfig);
    }
  </script>
